    <div  >
        <!--add a car-->
        <form   name="form1" method="GET" action="/addCar" >
            <input style="border-radius: 5px" type="submit" class="btn btn-warning" value="Add a Car"/>
        </form>
    </div>

<div>

    <table cellspacing="50">
        <tr>
            <th>
                <!--get all cars-->
                <form name="form1" method="POST"  action="/getAllCars">
                    <input   style="border-radius: 5px"  type="submit" value="Show All Cars" class="btn btn-info"/>
                </form>
            </th>
        </tr>
        <tr>
            <th>
                <!--show charts-->
                <form name="form4" method="POST"  action="/goToCharts">
                    <input   style="border-radius: 5px"  type="submit" value="Show Charts" class="btn btn-primary"/>
                </form>
            </th>
        </tr>
    </table>
</div>





    <table class="table table-hover" style="align:center;font-family: 'arial';background-color: rgba(123,162,137,0.8);
border-radius: 5px">
