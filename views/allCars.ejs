            <th>ID</th>
            <th>MPG</th>
            <th>CYL</th>
            <th>ENG</th>
            <th>WGT</th>
            <th></th>
            <th></th>

        </tr>
        <% for(var i=0; i < datas.length; i++){%>
  <tr style= " background-image: url('http://www.taniakugai.com/img/fog_t_03.png');
border-radius: 5px">

            <td><h4> <%= datas[i].ID %></h4>
            </td>
            <td><h4> <%= datas[i].MPG %></h4>  </td>
            <td><h4> <%= datas[i].CYL  %></h4></td>
            <td> <h4> <%= datas[i].ENG %></h4> </td>
            <td> <h4> <%= datas[i].WGT %></h4></td>
            <td> <h4>
                    <form name="form1" method="POST"  action="/editCar">
                        <input  type="text"
                                name="idToEdit"
                                value=<%= datas[i].ID %>
                                hidden />
                        <input style="border-radius: 5px" type="submit" value="Edit" class="btn btn-info"/>
                    </form>

                </h4></td>
            <td> <h4>
                    <form name="form1" method="POST"  action="/deleteCar">
                        <input  type="text"
                                name="idToDelete"
                                value=<%= datas[i].ID %>
                               hidden />
                        <input style="border-radius: 5px"  type="submit" value="Delete" class="btn btn-danger"/>
                    </form>
                </h4></td>
        </tr>
        <%}%>
    </table>




</div>

